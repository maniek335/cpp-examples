{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build project",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-I",
        "${workspaceFolder}/include",
        "-g",
        "${workspaceFolder}/app.cpp",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/dist/app"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
